<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Banner.BannerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:text="Thêm poster quảng cáo"
            android:textColor="@color/green"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_LuuPoster"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="22dp"
            android:background="@drawable/button_luu"
            android:fontFamily="@font/nunito_bold"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_HinhAnhPoster"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/add_image_product" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito"
                android:text="Tên poster"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edt_TenPoster"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập tên poster"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>