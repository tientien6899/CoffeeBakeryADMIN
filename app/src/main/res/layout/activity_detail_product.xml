<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".List_Product.DetailProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:text="Chi tiết sản phẩm"
            android:textColor="@color/green"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_CapnhatSP"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="22dp"
            android:background="@drawable/button_luu"
            android:fontFamily="@font/nunito_bold"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_chitietHinhanhSP"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/add_image_product" />

                <CheckBox
                    android:id="@+id/chb_spmoi"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nunito"
                    android:text="Sản phẩm mới"
                    android:textColor="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nunito"
                    android:text="Danh mục sản phẩm"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_chitietDanhmucSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_textfield"
                    android:fontFamily="@font/nunito"
                    android:hint="Chọn danh mục ..."
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nunito"
                    android:text="Mã sản phẩm"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_chitietMaSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_textfield"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập mã sản phẩm ..."
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nunito"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_chitietTenSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_textfield"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập tên sản phẩm ..."
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nunito"
                    android:text="Giá size S"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_chitietGiaS"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_textfield"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập giá size S ..."
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nunito"
                    android:text="Giá size M"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_chitietGiaM"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_textfield"
                    android:hint="Nhập giá size M ..."
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nunito"
                    android:text="Giá size L"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_chitietGiaL"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_textfield"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập giá size L ..."
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nunito"
                    android:text="Giá khuyến mãi"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_chitietGiaKM"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_textfield"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập giá khuyến mãi ..."
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nunito"
                    android:text="Mô tả"
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_chitietMotaSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_textfield"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập mô tả sản phẩm ..."
                    android:inputType="textMultiLine"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_Xoa"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_do"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Xóa sản phẩm"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>