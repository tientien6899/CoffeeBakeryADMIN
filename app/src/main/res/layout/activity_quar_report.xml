<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ListReport.QuarReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:text="Thống kê theo quý"
            android:textColor="@color/green"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Chọn năm"
                android:textColor="@color/gray"
                android:textSize="17dp"   />

            <TextView
                android:id="@+id/report_yearreport"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edt_trang"
                android:drawableRight="@drawable/sort"
                android:gravity="center"
                android:paddingRight="7dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/report_xemreportquy"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_luu"
                android:fontFamily="@font/nunito_bold"
                android:text="Xem"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Chi tiết báo cáo"
                android:textColor="@color/gray"
                android:textSize="18dp"/>

            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view_quy"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_margin="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>