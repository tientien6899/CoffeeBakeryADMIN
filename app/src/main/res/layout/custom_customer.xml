<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="1.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_HinhKH"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_TenKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nguyễn Thị Cẩm Tiên"
                android:textColor="@color/black"
                android:textSize="17.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_EmailKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tientien.6899@gmail.com"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_DiachiKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="67 Bờ Bao Tân Thắng, Sơn Kỳ, Tân Phú, TPHCM"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_SDTKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0838532354"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>