<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Infomation.AddInfoActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_BackAddInfo_TTCH"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thông tin cửa hàng"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_SaveTTCH"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/check" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Tên cửa hàng"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_TenCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textfield"
                android:inputType="text"
                android:hint="Nhập tên cửa hàng ..."
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_EmailCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textfield"
                android:hint="Nhập email ..."
                android:paddingLeft="20dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Địa chỉ"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_DiaChiCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textfield"
                android:hint="Nhập địa chỉ ..."
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_SDTCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textfield"
                android:hint="Nhập số điện thoại ..."
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:inputType="number"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Ghi chú"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_GhiChuCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textfield"
                android:hint="Nhập ghi chú, lịch làm việc ..."
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>