<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Infomation.AddInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:text="Thông tin cửa hàng"
            android:textColor="@color/green"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_Dongy"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="22dp"
            android:background="@drawable/button_luu"
            android:fontFamily="@font/nunito_bold"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito"
                android:text="Tên cửa hàng"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_TenCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập tên cửa hàng ..."
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito"
                android:text="Email"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_EmailCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập email ..."
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito"
                android:text="Địa chỉ"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_DiaChiCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập địa chỉ ..."
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito"
                android:text="Số điện thoại"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_SDTCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập số điện thoại ..."
                android:inputType="number"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito"
                android:text="Ghi chú"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/txt_GhiChuCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập ghi chú, lịch làm việc ..."
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>