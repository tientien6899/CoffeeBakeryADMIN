        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_CapheTra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunito"
                    android:text="Cà phê - Trà"
                    android:textColor="@color/gray"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/rb_Daxay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/nunito"
                    android:text="Đá xay"
                    android:textColor="@color/gray"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/rb_NuocepSinhto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/nunito"
                    android:text="Nước ép - Sinh tố"
                    android:textColor="@color/gray"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/rb_Banhngot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/nunito"
                    android:text="Thức ăn"
                    android:textColor="@color/gray"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/rb_Topping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/nunito"
                    android:text="Topping"
                    android:textColor="@color/gray"
                    android:textSize="17sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_XacnhanDM"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/button_xanh"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:fontFamily="@font/nunito_bold"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>