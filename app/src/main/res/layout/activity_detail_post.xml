<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ListDetailPost.DetailPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:text="Chi tiết bài viết"
            android:textColor="@color/green"
            android:textSize="23sp" />

        <Button
            android:id="@+id/img_UpdatePost"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="22dp"
            android:background="@drawable/button_luu"
            android:fontFamily="@font/nunito_bold"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/detailpost_hinhanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/detailpost_ngaydang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nunito"
                android:gravity="center|left"
                android:hint="25/1/2021"
                android:textSize="13sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito"
                android:text="Tiêu đề"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/detailpost_tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập tiêu đề ..."
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito"
                android:text="Nội dung"
                android:textColor="@color/gray"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/detailpost_noidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_textfield"
                android:fontFamily="@font/nunito"
                android:hint="Nhập nội dung ..."
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <Button
                android:id="@+id/img_DeletePost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_do"
                android:fontFamily="@font/nunito_bold"
                android:text="Xóa bài viết"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>