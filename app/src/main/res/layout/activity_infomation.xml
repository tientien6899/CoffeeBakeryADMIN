<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Infomation.InfomationActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_BackTTCH_Admin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thông tin cửa hàng"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_AddInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Tên cửa hàng"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_TenCuaHangInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_textfield"
            android:text="Chưa nhập thông tin"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center|left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_EmailCuaHangInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_textfield"
            android:text="Chưa nhập thông tin"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center|left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Địa chỉ"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_DiaChiCuaHangInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_textfield"
            android:text="Chưa nhập thông tin"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center|left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Số điện thoại"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_SDTCuaHangInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_textfield"
            android:text="Chưa nhập thông tin"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center|left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Ghi chú"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_GhiChuCuaHangInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_textfield"
            android:text="Chưa nhập thông tin"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center|left"/>

    </LinearLayout>

</LinearLayout>