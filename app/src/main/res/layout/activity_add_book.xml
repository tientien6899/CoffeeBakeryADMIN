<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ListBook.AddBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:text="Thêm chính sách"
            android:textColor="@color/green"
            android:textSize="23sp" />

        <Button
            android:id="@+id/img_savebook"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="22dp"
            android:background="@drawable/button_luu"
            android:fontFamily="@font/nunito_bold"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Tên chính sách"
            android:textColor="@color/gray"
            android:fontFamily="@font/nunito"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/detailbook_tieude"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_textfield"
            android:hint="Nhập tên chính sách"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/nunito"
            android:textSize="16dp"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Nội dung chính sách"
            android:textColor="@color/gray"
            android:fontFamily="@font/nunito"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/detailbook_noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_textfield"
            android:hint="Nhập nội dung chính sách"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/nunito"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>