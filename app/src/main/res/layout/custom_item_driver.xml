<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_taikhoandangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tai khoan dang nhap"
            android:textSize="14sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/txt_hotentaixe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ho ten tai xe"
            android:textSize="14sp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/txt_sdttaixe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SDT tai xe"
            android:textSize="14sp"
            android:layout_marginLeft="7dp"
            android:paddingLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tong don hang"
            android:textSize="14sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_tongsodonhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tong don hang"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>